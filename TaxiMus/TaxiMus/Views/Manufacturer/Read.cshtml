
@{
    ViewBag.Title = "Read";
}

<h2>Read</h2>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manufacturer in ViewBag.Manufacturers)
    {

        <tr>
            <td>@manufacturer.ID</td>
            <td>@manufacturer.Name</td>
        </tr>
}
        </tbody>
    </table>
</div>

<a href="~/Manufacturer/Create" class="btn btn-info" role="button">Create New</a>
